@model Web.Models.DTO.RegistrationRequestDTO

<form method="POST">
  <div class="container border p-4">
    <div class="row text-center">
      <h1>Register</h1>
    </div>
    <div class="row text-center">
      <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="row">
      <div class="col-md-6 offset-md-3 pb-2"><input asp-for="Email"
        class="form-control" placeholder="Email" /></div>
      <div class="col-md-6 offset-md-3 pb-2"><input asp-for="Password"
        class="form-control" placeholder="Password" type="password" /></div>
      <div class="col-md-6 offset-md-3 pb-2"><input asp-for="Name"
        class="form-control" placeholder="Name" /></div>
      <div class="col-md-6 offset-md-3 pb-2"><input asp-for="PhoneNumber"
        class="form-control" placeholder="Phone" /></div>
      <div class="col-md-6 offset-md-3 pb-2">
        <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
          <option disabled selected>--Select Role--</option>
        </select>
      </div>
    </div>
    <div class="col-6 offset-3 pb-2">
      <button type="submit" class="form-control btn btn-success"
        value="Submit">Register</button>
    </div>
  </div>
</form>
